<!-- Put site-specific property overrides in this file. -->

<configuration>
	<property>
		<name>fs.defaultFS</name>
		<value>hdfs://localhost:9000</value>
		<description>namenode url</description>
	</property>
	<property>
		<name>io.file.buffer.size</name>
		<value>131072</value>
		<description>size of read/write buffer used in SequenceFile</description>
	</property>
	<property>
		<name>hadoop.tmp.dir</name>
		<value>/hadoop_tmp</value>
		<description>a base for other temporary directories,默认/tmp;如果不设置，datanode/namenode默认存放在 {hadoop.tmp.dir}/dfs/..目录下,linux意外重启/tmp会被清空</description>
	</property>
	<!--hive,sqoop 链接hdfs使用，
	     hdoop.proxyuser.<user>.hosts ,尖括号内是用户名
	     -->
	<property>
                <name>hadoop.proxyuser.hadoop.hosts</name>
                <value>*</value>
        </property>
        <property>
                <name>hadoop.proxyuser.hadoop.groups</name>
                <value>*</value>
        </property>
</configuration>
